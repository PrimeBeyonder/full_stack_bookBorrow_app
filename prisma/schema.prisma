generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  name           String?
  image          String?
  emailVerified  DateTime?
  hashedPassword String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  borrowings     Borrowing[]
  wishlists      Wishlist[]
}

model Book {
  id          String   @id @default(cuid())
  title       String
  author      String
  isbn        String   @unique
  genre       String
  description String?
  coverImage  String?
  available   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  borrowings  Borrowing[]
  wishlists   Wishlist[]
}

model Borrowing {
  id         String   @id @default(cuid())
  userId     String
  bookId     String
  borrowDate DateTime @default(now())
  dueDate    DateTime
  returnDate DateTime?
  status     String   // e.g., "PENDING", "APPROVED", "RETURNED", "OVERDUE"
  user       User     @relation(fields: [userId], references: [id])
  book       Book     @relation(fields: [bookId], references: [id])
}

model Wishlist {
  id        String   @id @default(cuid())
  userId    String
  bookId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  book      Book     @relation(fields: [bookId], references: [id])
}